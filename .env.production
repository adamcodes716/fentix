# Production Environment Configuration  
# Used for OMV deployment

# Trading API Keys (production keys)
BINANCE_API_KEY=your_production_binance_api_key
BINANCE_SECRET_KEY=your_production_binance_secret_key

# Ollama Configuration (OMV external server)
OLLAMA_BASE_URL=http://192.168.1.100:11434
OLLAMA_TIMEOUT=120

# Trading Settings (production values)
TRADING_MODE=paper
RISK_MANAGEMENT_ENABLED=true
MAX_POSITION_SIZE=1000
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=5.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# Production specific
ENV=production
DEBUG=false
ENABLE_DEBUG_ENDPOINTS=false
HOT_RELOAD=false

# OMV/Production specific settings
DATA_PERSISTENCE_PATH=/app/data
BACKUP_ENABLED=true
METRICS_ENABLED=true
